<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Player">
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">32dp</item>
    </style>

    <style name="PlayerName" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Counter">
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">.5</item>
    </style>

    <style name="IncrementButton">
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Score">
        <item name="android:inputType">number</item>
        <item name="android:textSize">64sp</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="ResetButton" parent="IncrementButton">
        <item name="android:src">@drawable/refresh</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:onClick">reset</item>
    </style>

</resources>
